
<link href="https://fonts.googleapis.com/icon?family=Material+Icons"
      rel="stylesheet">
<%= stylesheet_link_tag 'dropdown', media: 'all', 'data-turbolinks-track': 'reload' %>
<div class="dropdown_input_container">
  <!-- Btn-->
<span tooltip="<%=tooltip_message%>" flow="right">

  <button class="dropdown_input_btn" id=<%= dropdown_id %>><span id="dropdown_title">Sound Mode</span><i class="material-icons">volume_up</i>
    <ul class="dropdown_input">
      <li class="dropdown_input_active"><a href="#"><%= items[0] %></a></li>
      <% items.drop(1).each do |item| %>
      <li><a href="#"><%= item %></a></li>
      <% end %>
    </ul>
  </button>
</div>
</span>